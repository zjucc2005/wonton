<% form_tag url(:sessions, :create), :method => :post, :class => 'login form-horizontal' do %>
    <div class="login-body modal-body">
        <div class="form-group">
            <%= content_tag :label, t(:email), :class => 'col-lg-2 control-label', :for => :email %>
            <div class="col-lg-10">
                <%= email_field_tag :email, :value => params[:email], :autofocus => true, :required => true, :class => 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <%= content_tag :label, t(:password), :class => 'col-lg-2 control-label', :for => :password %>
            <div class="col-lg-10">
                <%= password_field_tag :password, :value => params[:password], :autofocus => true, :required => true, :class => 'form-control' %>
            </div>
        </div>
    </div>
    <div class="login-footer modal-footer">
        <%#= link_to 'Forgot password?', url(:reset_password, :new) %>
        <%#= link_to 'Register', url(:registrations, :new), :class => 'btn btn-warning' %>
        <%= submit_tag t('action.login'), :class => 'btn btn-primary' %>
    </div>
<% end %>
