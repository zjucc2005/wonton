<% error = @product_category.errors.include?(:name) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
    <%= f.label :name, :class => 'control-label' %>
    <div class='controls'>
        <%= f.text_field :name, :required => true, :class => 'form-control input-xlarge input-with-feedback' %>
        <span class='help-inline'><%= error ? f.error_message_on(:name) : '' %></span>
    </div>
</fieldset>

<% error = @product_category.errors.include?(:description) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
    <%= f.label :description, :class => 'control-label' %>
    <div class='controls'>
        <%= f.text_field :description, :class => 'form-control input-xlarge input-with-feedback' %>
        <span class='help-inline'><%= error ? f.error_message_on(:description) : '' %></span>
    </div>
</fieldset>

<% if request.action == :edit && @product_category.grade == 2 %>
<% error = @product_category.errors.include?(:parent_id) %>
<fieldset class="control-group <%= error ? 'has-error' : '' %>">
    <%= f.label :parent, :class => 'control-label' %>
    <div class="controls">
        <%= f.select :parent_id, :options => @main_categories.map{|c| [c.name, c.id]},
                     :class => 'form-control input-xlarge input-with-feedback' %>
      <span class='help-inline'><%= error ? f.error_message_on(:parent_id) : '' %></span>
    </div>
</fieldset>
<% end %>

<div class="clearfix"></div>

<div class="form-actions modal-footer">
  <%= f.submit pat(:save), :class => 'btn btn-primary' %>
  &nbsp;
  <%= f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue' %>
  &nbsp;
  <%= link_to pat(:cancel), url(:product_categories, :index), :class => 'btn btn-default' %>
</div>