<ul class="nav nav-tabs">
    <li> <%= link_to tag_icon(:list, pat(:list)), url(:product_categories, :index) %></li>
    <li class="<%= 'active' if @parent.nil? %>"> <%= link_to tag_icon(:plus, pat(:new_product_category, :grade => 1)), url(:product_categories, :new) %></li>
    <% if @parent %>
        <li class="active"> <%= link_to tag_icon(:plus, pat(:new_product_category, :grade => 2)), url(:product_categories, :new, :parent_id => @parent.id) %></li>
    <% end %>
</ul>
<div class="tabs-content">
    <div class="row">
        <% if @parent %>
        <div class="col-md-4 col-xs-6">
            <ul class="list-group">
                <%= content_tag :li, @parent.name, :class => 'list-group-item active arrow-right', :title => @parent.description %>
            </ul>
        </div>
        <% end %>

        <div class="col-md-4 col-xs-6">
            <% form_for :product_category, url(:product_categories, :create, :parent_id => params[:parent_id]), :class => 'form-horizontal' do |f| %>
                <%= partial 'form', :locals => { :f => f } %>
            <% end %>
        </div>
    </div>
</div>