<ul class="nav nav-tabs">
    <li> <%= link_to tag_icon(:user, t(:customer_accounts)), url(:accounts, :index) %></li>
    <li> <%= link_to tag_icon(:gear, t(:admin_accounts)), url(:accounts, :admin) %></li>
    <li> <%= link_to tag_icon(:plus, t('action.new')), url(:accounts, :new) %></li>
    <li class="active"> <%= link_to tag_icon(:edit, t('action.edit')), url(:accounts, :edit, :id => @account.id) %></li>
</ul>
<div class="tabs-content">
    <% form_for :account, url(:accounts, :update, :id => @account.id), :method => :put, :class => 'form-horizontal' do |f| %>
        <%= partial 'form', :locals => { :f => f } %>
    <% end %>
</div>
