<% error = @product.errors.include?(:name) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
    <%= f.label :name, :class => 'control-label' %>
    <div class='controls'>
        <%= f.text_field :name, :class => 'form-control input-xlarge input-with-feedback' %>
        <span class='help-inline'><%= error ? f.error_message_on(:name) : '' %></span>
    </div>
</fieldset>

<% error = @product.errors.include?(:description) %>
<fieldset class='control-group <%= error ? 'has-error' : ''%>'>
    <%= f.label :description, :class => 'control-label' %>
    <div class='controls'>
        <%= f.text_area :description, :class => 'ckeditor form-control input-xlarge input-with-feedback' %>
        <span class='help-inline'><%= error ? f.error_message_on(:description) : '' %></span>
    </div>
</fieldset>

<div class="clearfix"></div>

<div class="form-actions modal-footer">
    <%= f.submit pat(:save), :class => 'btn btn-primary' %>
    &nbsp;
    <%= f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue' %>
    &nbsp;
    <%= link_to pat(:cancel), url(:products, :index), :class => 'btn btn-default' %>
</div>

<%= javascript_include_tag 'ckeditor/ckeditor' %>